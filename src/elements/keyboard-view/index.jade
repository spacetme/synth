link(rel='import' href='../../components/polymer/polymer.html')

polymer-element(name='keyboard-view' attributes='model base')
  template
    style: include:scss style.scss
    #container(on-touchstart='{{updateTouches}}'
               on-touchmove='{{updateTouches}}'
               on-touchend='{{updateTouches}}'
               on-mousedown='{{mousedown}}')
      template(repeat='{{keys}}')
        .key(data-type='{{type}}'
             data-note='{{note}}'
             data-active='{{active}}'
             style='width: {{width}}px; margin-left: {{x}}px')
  script: include:es6 script.js
